server {
	listen 80;
	listen [::]:80;
	server_name pingu;
	return 301 https://$server_name$request_uri;
}

server {

	listen 443 ssl ;
	listen [::]:443 ssl ;

	server_name pingu;

// création certificats de sécurité 

	ssl_certificate /etc/nginx/ssl/pingu.pem; ou /root/asgaulti/pingu.pem;
	ssl_certificate_key /etc/nginx/ssl/pingu.key; ou /root/asgaulti/pingu.key;
// pour la 2eme proposition il faudrait avoir installé nginx avant dans un autre fichier? ou le run dans le dockerfile?

	root /var/www/pingu;   // racine du site

//liste des index
	index index.html index.htm index.nginx-debian.html index.php;

// création uri
	location / {
		autoindex on; // facultatif : quel est le plus de faire un autoindex?
		try_files $uri $ uri/ = 404;
	}

// création du fastCGI

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;
}
